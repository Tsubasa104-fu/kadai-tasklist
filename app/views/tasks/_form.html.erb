<%= form_for(@task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |tsk| %>
          <li><%= tsk %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'タスクステータス' %>
  <%= f.text_field :status %>

  <%= f.submit '投稿' %>
<% end %>
